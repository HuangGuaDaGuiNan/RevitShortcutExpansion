<Window x:Class="RevitShortcutExpansion.InputWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitShortcutExpansion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="350" Height="100" Title="创建按键方案" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel VerticalAlignment="Center">
            <Label>名称:</Label>
            <TextBox x:Name="inputName" Margin="3"></TextBox>
        </DockPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment = "Right" Orientation = "Horizontal" Margin="2">
            <Button x:Name="Ok" Margin="0,3,3,3" Padding="1.5" MinWidth="55">确定</Button>
            <Button x:Name="Cancel" Margin="0,3,3,3" Padding="1.5" MinWidth="55" IsCancel="True">取消</Button>
        </StackPanel>
    </Grid>
</Window>
